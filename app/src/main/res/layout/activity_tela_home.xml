<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".TelaHome">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1F6124"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/image_toolbar"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="AnYges"
            android:src="@drawable/logologin" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inriasans"
            android:gravity="center_vertical"
            android:text="AnYges"
            android:textColor="#611F20"
            android:textSize="25sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F6124"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbt1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Home"
            app:srcCompat="@drawable/imghome" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Perfil"
            app:srcCompat="@drawable/imgperfil" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Cart"
            app:srcCompat="@drawable/imgcarrinho" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Scann"
            app:srcCompat="@drawable/logoscanner" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="621dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <Button
                android:id="@+id/button6"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1F6124"
                android:fontFamily="@font/inriasans"
                android:onClick="Voltar"
                android:text="Voltar"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inriasans"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="27sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/tx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inriasans"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="27sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button5"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1F6214"
                    android:fontFamily="@font/inriasans"
                    android:onClick="Acesso"
                    android:text="Cadastrar ou Entrar"
                    android:textColor="#FFFFFF" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/sino" />

                <TextView
                    android:id="@+id/txNot"
                    android:layout_width="271dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/inriasans"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Notificações"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txCupom"
                    android:layout_width="314dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/inriasans"
                    android:gravity="center_vertical"
                    android:onClick="Cupons"
                    android:padding="5dp"
                    android:text="  Cupons"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewGo"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="Cupons"
                    android:text="&gt;"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:onClick="Acessibilidade"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/mao" />

                <TextView
                    android:id="@+id/txAccs"
                    android:layout_width="270dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/inriasans"
                    android:gravity="center_vertical"
                    android:onClick="Acessibilidade"
                    android:padding="5dp"
                    android:text="Acessibilidade"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="Acessibilidade"
                    android:text="&gt;"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Space
                    android:layout_width="1dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="42dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/interrogacao" />

                <TextView
                    android:id="@+id/txAid"
                    android:layout_width="270dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/inriasans"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Ajuda"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="&gt;"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#D9D9D9"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/estrela" />

                <TextView
                    android:id="@+id/txFdback"
                    android:layout_width="270dp"
                    android:layout_height="47dp"
                    android:fontFamily="@font/inriasans"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:text="Deixe o seu Feedback"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="&gt;"
                    android:textColor="#000000"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1F6124"
                    android:fontFamily="@font/inriasans"
                    android:onClick="Sair"
                    android:text="Sair"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>