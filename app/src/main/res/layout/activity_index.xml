<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Index">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1F6124"
        android:padding="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/image_toolbar"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:contentDescription="AnYges"
            android:src="@drawable/logologin" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inriasans"
            android:gravity="center_vertical"
            android:text="AnYges"
            android:textColor="#611F20"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!--<TextView
            android:id="@+id/pontos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/inriasans"
            android:gravity="right|center_vertical"
            android:text="50000"
            android:textColor="#611F20"
            android:textSize="25sp"
            android:textStyle="bold" />-->

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#1F6124"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Home"
            app:srcCompat="@drawable/imghome" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Perfil"
            app:srcCompat="@drawable/imgperfil" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Cart"
            app:srcCompat="@drawable/imgcarrinho" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#1F6124"
            android:onClick="Scann"
            app:srcCompat="@drawable/logoscanner" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#1F6124"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <EditText
                android:id="@+id/editPesquisa"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#611F20"
                android:ems="10"
                android:fontFamily="@font/inriasans"
                android:hint="Que produto estÃ¡ buscando?"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#D9D9D9" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtnMed"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#67FB0404"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/imgmedicamento" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/imgBtnCon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#67FFA600"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/imgconsulta" />

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/imgBtnHig"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:backgroundTint="#670051FF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/imghigiene" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inriasans"
                android:text="Medicamentos"
                android:textColor="#000000" />

            <Space
                android:layout_width="47dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inriasans"
                android:text="Consultas"
                android:textColor="#000000" />

            <Space
                android:layout_width="40dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inriasans"
                android:text="Beleza e Higiene"
                android:textColor="#000000" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyCupons"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>